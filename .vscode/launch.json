{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ALL",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
            "program": "${workspaceFolder}\\bin\\apprun.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Mydata/x86_64-14.2.0-release-win32-seh-msvcrt-rt_v12-rev0/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "GDB Native Debugging",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
            "cwd": "${workspaceFolder}/bin",
            "gdbpath": "C:/Mydata/x86_64-14.2.0-release-win32-seh-msvcrt-rt_v12-rev0/mingw64/bin/gdb.exe",
            "arguments": [],
            "autorun": [
                "set disassembly-flavor intel",
                "set print pretty on",
                "set charset utf-8",
                "break main",
                "-exec-run"
            ]
        },
        {
            "name": "LLDB Native Debugging",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main_exec.exe",   // ✅ 用 program，不是 target
            "cwd": "${workspaceFolder}/bin",
            "args": [],                                          // ✅ 用 args，不是 arguments
            "stopOnEntry": false,
            // 可省略，CodeLLDB 自带 adapter；若想显式指定，用 "adapter"
            "adapter": "C:/Mydata/clang+llvm-20.1.8-x86_64-pc-windows-msvc/clang+llvm-20.1.8-x86_64-pc-windows-msvc/bin/lldb-dap.exe",
            "preRunCommands": [                                  // ✅ 用 LLDB 命令，不是 GDB 命令
                "settings set target.x86-disassembly-flavor intel",
                "breakpoint set --name main"
        ]
}

    ]
}

