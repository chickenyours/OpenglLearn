# plane.obj
mtllib hhh.mtl      # 添加材质库引用
o Plane
usemtl hhh

# 顶点
v -1.0 0.0 -1.0
v  1.0 0.0 -1.0
v  1.0 0.0  1.0
v -1.0 0.0  1.0

# 纹理坐标
vt 0.0 0.0
vt 1.0 0.0
vt 1.0 1.0
vt 0.0 1.0

# 法线（正面朝上，反面朝下）
vn 0.0 1.0 0.0
vn 0.0 -1.0 0.0

# 正面（顺时针）
f 1/1/1 2/2/1 3/3/1
f 1/1/1 3/3/1 4/4/1

# 反面（逆时针）
f 3/3/2 2/2/2 1/1/2
f 4/4/2 3/3/2 1/1/2
